---
interface Props {
	title: string;
	tagline?: string;
}

const { tagline, title } = Astro.props;
---

<div>
	<div class="text-center lg:text-start max-w-sm lg:max-w-xl">
		<h1 class="text-4xl lg:text-6xl text-gray-900 dark:text-white mb-4">{title}</h1>
		{tagline && <p class="text-xl lg:text-2xl">{tagline}</p>}
	</div>

	<slot />

</div>
